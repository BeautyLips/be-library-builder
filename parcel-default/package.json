{
  "name": "@yourscope/namepackage",
  "description": "Description package",
  "keywords": [
    "keywords 1",
    "keywords 2",
    "keywords 3"
  ],
  "public": true,
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Your Name",
    "email": "youremail",
    "url": "https://github.com/yourname"
  },
  "bugs": {
    "url": "https://github.com/yourname/namepackage/issues",
    "email": "youremail"
  },
  "homepage": "https://github.com/yourname/namepackage#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourname/namepackage.git"
  },
  "version": "0.0.1",
  "source": "src/index.ts",
  "main": "dist/main.js",
  "module": "dist/module.js",
  "types": "dist/types.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "dev": "npm run dev:html & npm run dev:package",
    "dev:package": "parcel watch",
    "dev:html": "parcel src/index.html",
    "check:ts": "tsc --noEmit",
    "check:test": "jest",
    "build": "npm run lint && npm run check:test && npm run check:ts && parcel build",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .eslintignore",
    "lint:prettier": "prettier --write \"**/*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts,css,scss,less,md,json}\" --ignore-path .prettierignore",
    "update": "ncu --interactive --format group",
    "update:node": "volta pin node@lts",
    "settings:envinfo": "npx envinfo --system --binaries",
    "settings:executable": "node executable.config.cjs",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@jest/globals": "^29.7.0",
    "@parcel/packager-ts": "^2.12.0",
    "@parcel/transformer-typescript-types": "^2.12.0",
    "@rushstack/eslint-patch": "^1.10.3",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.5",
    "parcel": "^2.12.0",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.11.0"
  },
  "volta": {
    "node": "20.14.0",
    "npm": "10.5.2"
  },
  "engines": {
    "node": ">= 20",
    "npm": ">= 10"
  }
}
